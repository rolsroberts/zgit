<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ObjectListItem
		id="LocationShop"
		icon="sap-icon://customer-and-supplier"
		title="{SenderLandData>RepresentationName}"
		type="Active"
        intro="{SenderLandData>opentime}"
        numberUnit="EUR"
		press=".onItemSelected">
        <ObjectAttribute text="{SenderLandData>StreetName}" />
        <ObjectAttribute text="{SenderLandData>City}" />
        <ObjectAttribute text="{SenderLandData>Contact}" />
        <markers>
          <ObjectMarker type="Favorite" />
          <ObjectMarker type="Flagged" />
        </markers>
	</ObjectListItem>
</core:FragmentDefinition>