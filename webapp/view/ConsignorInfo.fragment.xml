<core:FragmentDefinition xmlns:form="sap.ui.layout.form" xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core">
                                                
<Dialog title="My Dialog">
    	<HBox justifyContent="Center">
            <Image src="https://openui5.hana.ondemand.com/test-resources/sap/tnt/demokit/toolpageapp/webapp/images/homeImage.jpg" width="500px" />
        </HBox>

     <form:SimpleForm editable="true">  
        						<form:title>
							<core:Title icon="sap-icon://employee-lookup" text="{i18n>GeneralInformation}"/>
						</form:title>
       <form:content>
     <Label text="{i18n>ConsignmentAdressLand}"/>
                                    <ComboBox class="sapUiSmallMarginBottom"
                                            id="ConsignorLand"
                                            selectionChange="onChangeSenderLand"
                                            value="{ModelNewOrder>/residenceLand}"
                                            showSecondaryValues= "true"
                                            valueState="Information"
                                            valueStateText="{i18n>InformationForDepartureland}"
                                                items="{
                                                path: 'SenderLandData>/SenderLands',
                                                sorter: { path: 'Key' }
                                                
                                            }"
                                                loadItems="handleLoadItems">
                                            <core:ListItem key="{SenderLandData>Key}" text="{SenderLandData>Description}"  additionalText = "{SenderLandData>Key}"/>
                                    </ComboBox>
                                    <Label text="Sex" />
                                      <RadioButtonGroup id="rbg2" columns="2" selectedIndex="2" class="sapUiMediumMarginBottom">
                                            <RadioButton id="gender_male" text="Male" selected="{ModelNewOrder>/sexeMale}" />
                                            <RadioButton id="gender_female" text="Female" selected="{ModelNewOrder>/sexeFemale}"/>
                                       </RadioButtonGroup>
                                        <Label text="{i18n>FirstName}" tooltip="{i18n>FirstName}"/>
                                        <MaskInput placeholder="{i18n>FirstName}"  mask="~~~~~~~~~~~~~~~~~~~~" value="{ModelNewOrder>/firstName}">
                                            <rules>
                                                <MaskInputRule maskFormatSymbol="~" regex="[^_]" />
                                            </rules>
                                        </MaskInput>
                                        <MaskInput placeholder="{i18n>SecondName}" mask="~~~~~~~~~~~~~~~~~~~~"  value="{ModelNewOrder>/secondName}">
                                            <rules>
                                                <MaskInputRule maskFormatSymbol="~" regex="[^_]"/>
                                            </rules>
                                        </MaskInput>
                                        <Label text="{i18n>BirthDate}" tooltip="{i18n>BirthDate}"/>
                                        <MaskInput  placeholder="{i18n>BirthDate}"  value="{ModelNewOrder>/birthdate}" >
                                        </MaskInput>
                                        
                                        <Label text="{i18n>MobilePhone}" tooltip="{i18n>MobilePhone}"/>
							            <MaskInput mask="9999999999999" placeholderSymbol="_" placeholder="{i18n>PlceHolderMobilePhone}" value="{ModelNewOrder>/mobilephone}">
                                        </MaskInput>
                                        
                                        <Label text="{i18n>EmailAdress}" tooltip="{i18n>EmailAdress}" />
							            <MaskInput value="{ModelNewOrder>/eMail}">  
                                        </MaskInput>

                                    <Label text="{i18n>ConsignmentStreetAndNr}"/>
                                    <MaskInput id="ConsignmentAdressStreetname" placeholder="{i18n>PlceHolderStreet}" mask="~~~~~~~~~~~~~~~~~"  value="{ModelNewOrder>/residenceStreet}">
                                            <rules>
                                                <MaskInputRule maskFormatSymbol="~" regex="[^_]"/>
                                            </rules>
                                    </MaskInput>
                                    <MaskInput placeholder="{i18n>PlceHolderStreetnr}" mask="~~~~~~~~~~~~~~~~~" width="50px" value="{ModelNewOrder>/residenceStreetNr}" >
                                    </MaskInput>
                                    <Label text="{i18n>ConsignmentAdress_co}"/>
                                    <Input id="ConsignmentAdressStreet_co" value="{ModelNewOrder>/adress_co}"  enabled="true" />
                                    
                                    <Label text="{i18n>PostcodeCity}"/>
                                    <MaskInput placeholder="{i18n>PlceHolderPostCode}" mask="99999" value="{ModelNewOrder>/ResidencePostCode}"> 
                                    </MaskInput>
                                    <MaskInput id="ConsignmentCity" placeholder="{i18n>PlceHolderCity}" mask="~~~~~~~~~~~~~~~~~" value="{ModelNewOrder>/ResidenceCity}">
                                            <rules>
                                                <MaskInputRule maskFormatSymbol="~" regex="[^_]"/>
                                            </rules>
                                    </MaskInput>
                                    </form:content>
								</form:SimpleForm>

<buttons>
<Button id= "CloseConsignorInfo" text="CLOSE" type="Reject" press="closeDialog"/>
<Button id= "SaveConsignorInfo" text="SAVE" type="Accept" press="onSaveConsignor"/>
</buttons>


</Dialog>
</core:FragmentDefinition>